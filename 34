programa{
	funcao real calcularMedia(real n1, real n2)
	{
		real media 

		media = (n1 + n2) / 2.0
		
		retorne media
	}

	funcao inicio()
	{
		real nota1 = 7.5 
		real nota2 = 9.0 
		real resultado_media 
		escreva("--- Cálculo da Média --- \n")		
		resultado_media = calcularMedia(nota1, nota2)		
		escreva("Nota 1: ", nota1, "\n")
		escreva("Nota 2: ", nota2, "\n")
		escreva("A média das notas é: ", resultado_media, "\n")
		escreva("\nMédia de 4.2 e 8.8: ", calcularMedia(4.2, 8.8), "\n")
	}
}
