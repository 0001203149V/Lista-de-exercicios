programa
{
	funcao inicio()
	{
		inteiro numero, contador, resultado
		escreva("--- Gerador de Tabuada ---\n")
		escreva("Digite o n√∫mero para gerar a tabuada (Ex: 7): ")
		leia(numero)
		
		escreva("\n") 
		escreva("Tabuada do ", numero, ":\n")
		para (contador = 1; contador <= 10; contador++)
		{
			resultado = numero * contador
			
			escreva(numero, " x ", contador, " = ", resultado, "\n")
		}
	}
}
