programa {
  funcao inicio() {
    real numero 
    escreva("Digite um número: ")
    leia(numero)
    se(numero > 0)
    {
      escreva("o número digitado (", numero, ") é positivo")
    }
    senao se(numero < 0)
    {
      escreva("o número digitado (", numero, ") é negativo")
    }
    senao
    {
      escreva("o número digitado (", numero, ") é zero")
    }
  }
}
