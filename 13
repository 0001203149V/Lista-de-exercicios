programa
{
	funcao inicio()
	{
		inteiro total_pares = 0
		inteiro numero 

		escreva("--- Contagem de Pares de 1 a 20 ---\n")
		
		para (numero = 1; numero <= 20; numero++)
		{

			se (numero % 2 == 0)
			{
				total_pares = total_pares + 1

			}
		}
		escreva("\n")
		escreva("Entre 1 e 20, foram encontrados ", total_pares, " nÃºmeros pares.")
	}
}
